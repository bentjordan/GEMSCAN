#!/usr/bin/env python3
# Authors: Bari Ballew, Wendy Wong

"""VCF harmonization module of CGR germline variant calling pipeline
"""



if clusterMode == "gcp" or useRemoteFiles:
    from snakemake.remote.GS import RemoteProvider as GSRemoteProvider
    GS = GSRemoteProvider()


rule Strelka2_norm_left_align_split:
    """Normalize, left-align, and split mulit-allelics in the Strelka2 vcf.
    """
    input:
        vcf="strelka2/genotyped/strelka2_variants.vcf.gz" if strelka2_mode else path_sanitize(strelkaVCF)
        i="strelka2/genotyped/strelka2_variants.vcf.gz.tbi" if strelka2_mode else path_sanitize(strelkaVCF+".tbi")
        ref=path_sanitize(refGenome),
    output:
        "ensemble/strelka2_normalized.vcf.gz",
    benchmark:
        "run_times/strelka2_norm_left-align_split/norm.tsv"
    resources:
        runtime=max(120, num_of_samples)
    threads: threads
    conda:
        "../envs/environment.yaml"
    singularity: "docker://quay.io/shukwong/bcftools:2020-12-09"    
    shell:
        "bcftools norm -f {input.ref} -m - --threads {threads} {input.vcf} | bcftools view --min-ac 1 --threads {threads}  -Oz -o {output}"


rule HC_norm_left_align_split:
    """Normalize, left-align, and split mulit-allelics in the HC vcf.
    """
    input:
        vcf="HaplotypeCaller/genotyped/HC_variants.vcf.gz" if hc_mode else path_sanitize(haplotypecallerVCF),
        i="HaplotypeCaller/genotyped/HC_variants.vcf.gz.tbi" if hc_mode else path_sanitize(haplotypecallerVCF+".tbi"),
        ref=path_sanitize(refGenome),
    output:
        "ensemble/HC_normalized.vcf.gz",
    benchmark:
        "run_times/HC_norm_left-align_split/norm.tsv"
    resources:
        runtime=max(120, num_of_samples)
    threads: threads
    conda:
        "../envs/environment.yaml"
    singularity: "docker://quay.io/shukwong/bcftools:2020-12-09"    
    shell:
        "bcftools norm -f {input.ref} -m - --threads {threads} {input.vcf} -Oz -o {output}"


rule DV_norm_left_align_split:
    """Normalize, left-align, and split mulit-allelics in the DV vcf.
    """
    input:
        vcf="deepVariant/genotyped/DV_variants.vcf.gz" if dv_mode else path_sanitize(deepvariantVCF),
        i="deepVariant/genotyped/DV_variants.vcf.gz.tbi"if dv_mode else path_sanitize(deepvariantVCF+".tbi"),
        ref=path_sanitize(refGenome),
    output:
